<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CreateFragment">

    <com.vinkas.layout.FlowLayout
        xmlns:vinkas="http://schemas.android.com/apk/res/com.vinkas.reminders"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="@dimen/margin_large"
        vinkas:horizontalSpacing="12dip"
        vinkas:verticalSpacing="12dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Book "
            android:textSize="30sp" />

        <TextView
            android:id="@+id/at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="at"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:hint="Tomorrow"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:hint="05.00 PM"
            android:textSize="30sp" />
    </com.vinkas.layout.FlowLayout>

</RelativeLayout>